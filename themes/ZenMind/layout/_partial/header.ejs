<!-- header.ejs -->
<div class="header">
    <a class="logo" href="<%- url_for() %>"><%= config.title %></a>
    <ul class="nav">
        <% for (name in theme.menu) { %>
        <li><a href="<%- url_for(theme.menu[name]) %>"><%= name %></a></li>
        <% } %>
        <!-- 添加搜索框 -->
        <li class="nav-search">
            <form id="search-form">
                <input type="search" id="search-input" placeholder="Search..." autocomplete="off" />
                <div id="search-results"></div> <!-- 添加这行 -->
            </form>
        </li>
    </ul>
</div>
<script src="<%- url_for('/js/search.js') %>"></script>